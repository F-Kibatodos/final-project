<div class="container">
  <form class="form-signin" action="/signin" method="POST" style="width: 100%;">
    <div class="text-center mb-4">
      <h1 class="h3 mb-3 font-weight-normal">Sign In</h1>
    </div>
    <div class="form-label-group">
      <label for="inputEmail">Email</label>
      <input type="text" name="email" class="form-control" placeholder="Email" required autofocus>
    </div>
    <div class="form-label-group">
      <label for="inputPassword">Password</label>
      <input type="password" name="password" class="form-control" placeholder="Password" required>
    </div>
    <br />
    <button class="btn btn-lg btn-info btn-block" type="submit">Submit</button>
    <a href="/auth/facebook" class="btn btn-outline-primary btn-block"><i class="fab fa-facebook-f"></i> Facebook 登入</a>
    <a href="/auth/google" class="btn btn-outline-danger btn-block"><i class="fab fa-google"></i> Google 登入</a>
    <div class="text-center my-4">
      <p><a href="/signup">Sign Up</a></p>
    </div>
    <p class="mt-5 mb-3 text-muted text-center">© 2019</p>
  </form>
</div>